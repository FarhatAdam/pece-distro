name        = PECE Scholarly Lite
description = PECE's Scholarly Lite Customizations
screenshot  = screenshot.png
core        = 7.x

; Base - Scholarity Lite
base theme  = scholarly_lite
;hidden = true

; CSS - General
stylesheets[all][]     = assets/css/main.css
stylesheets[print][]   = assets/css/print.css

; Javascript
scripts[] = assets/js/script.js

; Available Regions
regions[header_top_left]  = Header Top Left
regions[header_top_right] = Header Top Right

regions[header]           = Header
regions[navigation]       = Navigation

regions[highlighted]      = Highlighted
regions[content]          = Content
regions[footer]           = Footer

regions[help]             = Help
regions[page_top]         = Page top
regions[page_bottom]      = Page bottom

; Theme settings
settings[breadcrumb_display]= 1
settings[scrolltop_display]= 1
settings[frontpage_content_print]= 1
settings[three_columns_grid_layout]= 'grid_3_6_3'
settings[color_scheme]= 'gray-purple'
settings[fixed_header]= 1
settings[form_style]= 'form-style-1'
settings[headings_font_family]= 'hff-7'
settings[paragraph_font_family]= 'pff-7'
settings[sitename_font_family]= 'sff-7'
settings[slogan_font_family]= 'slff-7'
settings[responsive_multilevelmenu_state]= 1
settings[bootstrap_css_cdn]= 3.2.0
settings[bootstrap_js_cdn]= 3.2.0
settings[credits_display]= 1

; Theme Features
features[] = logo
features[] = favicon

; Theme plugins
plugins[panels][layouts] = layouts
